<mvc:View
		height="100%"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:u="sap.ui.unified"
		controllerName="Urlaubsantraege.controller.mainView"
		xmlns="sap.m"
		xmlns:semantic="sap.m.semantic"
		xmlns:ui="sap.ca.ui"
		xmlns:l="sap.ui.layout"
		displayBlock="true">

			<semantic:FullscreenPage title="{i18n>title}"
									 showNavButton="true"
									 navButtonPress="onNavButtonPress">
				<l:VerticalLayout>
					<u:Calendar
						id="calendar"
						select="handleCalendarSelect"
						intervalSelection="true"
						weekNumberSelect="handleWeekNumberSelect"
						width="100%"/>
					<Table id="requestsTable"
						inset="false"
						mode="SingleSelectLeft" 
						items="{
							path: '/AbsenceSet',
							sorter: {
								path: 'StartDate'
							}
						}"
					   width="100%">
					<headerToolbar>
						<Toolbar>
							<Title text="AntrÃ¤ge" level="H2"/>
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column
								width="auto">
							<Text text="Beginn" />
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="Ende" />
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="Art" />
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true"
								hAlign="End">
							<Text text="Beschreibung" />
						</Column>
						<Column
								hAlign="End">
							<Text text="Status" />
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{StartDate}" />
								<Text text="{EndDate}" />
								<Text text="{Type}" />
								<Text text="{Description}" />
								<Text text="{Status}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				</l:VerticalLayout>
				
				<semantic:customFooterContent>
						<Button press="onSubmitDialogPress" icon="sap-icon://add" type="Accept" />
						<Button press="onSubmitDialogPress" icon="sap-icon://add" type="Accept" />
						<Button press="onDeleteDialogPress" icon="sap-icon://delete" type="Reject" />
				</semantic:customFooterContent>

			</semantic:FullscreenPage>

</mvc:View>